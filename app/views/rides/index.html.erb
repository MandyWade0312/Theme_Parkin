<p id="notice"><%= notice %></p>

<h1 class="mx-6 my-2 text-2xl font-bold text-blue-900">Rides Available to be Reviewed</h1>

<table>
  <thead>
    <tr>
      <th class="mx-6 my-2 font-bold text-blue-500">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td class="mx-6 my-2 font-bold text-blue-500"><%= ride.name %></td>
        <td><%= link_to 'Show', ride, class: "mx-6 my-2 font-bold text-blue-500 hover:bg-blue-300 hover:text-blue-900" %></td>
    <% end %>
  </tbody>
</table>

<br>



