<p id="notice"><%= notice %></p>

<h1 class="mx-6 my-2 text-2xl font-bold text-blue-900">Theme Parkin Good Time</h1>

<table>
  <thead>
    <tr>
      <th class="mx-6 my-2 font-bold text-blue-500">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td class="mx-6 my-2 font-bold text-blue-500"><%= park.name %></td>
        <td><%= link_to 'Show', park, class: "mx-6 my-2 font-bold text-blue-500 hover:bg-blue-300 hover:text-blue-900" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Park', new_park_path, class: "m-6 bg-blue-700 hover:bg-blue-500 text-white font-bold py-2 px-4 border border-green-700 rounded"%>
